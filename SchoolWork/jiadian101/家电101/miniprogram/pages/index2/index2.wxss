.container{
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-around;
}

.box{
    width: 100%;
    display: flex;
    flex-direction: column;
    margin: 40rpx 0;
}

text{
    font-size: 30rpx;
    color: cadetblue;
    margin: 20rpx;
    flex-grow: 1;
}

input{
    border: 1rpx solid black;
    height: 50rpx;
    width: 700rpx;
    margin: 0 25rpx;
    flex-grow: 1;
}

picker{
    margin: 0 20rpx;
    padding: 10rpx;
    border: 1rpx solid black;
    width: 450rpx;
}

button{
    color: white;
    width: 50%;
    background-color: cadetblue;
    margin: auto;
    margin-top: 20rpx;
}